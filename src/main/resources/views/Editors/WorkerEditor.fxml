<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <MFXButton fx:id="btnCancel" onAction="#onCancel" text="Cancel" />
            <MFXButton fx:id="btnConfirm" alignment="CENTER" onAction="#onConfirm" text="Confirm" />
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="384.0" prefWidth="532.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Worker Name">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <TextField fx:id="workerNameField" />
                        <Label fx:id="workerNameErrorLabel" textFill="RED" />
                     </children>
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Worker Phone">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <TextField fx:id="workerPhoneField" />
                        <Label fx:id="workerPhoneErrorLabel" textFill="RED" />
                     </children>
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Worker Email">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <TextField fx:id="workerEmailField" />
                        <Label fx:id="workerEmailErrorLabel" textFill="RED" />
                     </children>
                     <HBox.margin>
                        <Insets top="20.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
