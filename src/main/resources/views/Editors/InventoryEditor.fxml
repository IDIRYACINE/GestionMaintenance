<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <MFXButton fx:id="btnCancel" onAction="#onCancel" text="Cancel" />
            <MFXButton fx:id="btnConfirm" alignment="CENTER" onAction="#onConfirm" text="Confirm" />
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" prefHeight="430.0" prefWidth="684.0" spacing="30.0">
         <children>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="ArticleId">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <TextField fx:id="articleIdField" />
                        <Label fx:id="articleIdErrorLabel" textFill="RED" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets left="30.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="ArticleNom">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox>
                     <children>
                        <TextField fx:id="articleNameField" />
                        <Label fx:id="articleNomErrorLabel" textFill="RED" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="Price">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox>
                     <children>
                        <TextField fx:id="articlePriceField" />
                        <Label fx:id="articlePriceErrorLabel" textFill="RED" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets left="70.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label text="StockId">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox>
                     <children>
                        <TextField fx:id="stockIdField" />
                        <Label fx:id="stockIdErrorLabel" textFill="RED" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="ArticleCode">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <TextField fx:id="articleCodeField" />
                        <Label fx:id="articleCodeErrorLabel" textFill="#e40000" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="CodeFamilie">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <TextField fx:id="articleFamilyField" />
                        <Label fx:id="articleFamilyErrorLabel" textFill="RED" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
